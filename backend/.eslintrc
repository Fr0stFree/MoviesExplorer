{
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "env": {
    "es6": true
  },
  "extends": "airbnb-base",
  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    "func-names": ["error", "never"],
    "indent": ["error", "tab"],
    "no-tabs": "off",
    "max-classes-per-file": ["error", 5]
  }
}
